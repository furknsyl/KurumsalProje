@using KurumsalProje.Models
@model List<BSMGRBCEOPR001>
@{
    ViewBag.Title = "Index";
}

<h2>Operasyon Bilgileri</h2>
<br />

<table class="table table-bordered">

    <tr>
        <th>ID</th>
        <th>Operasyon Tipi</th>
        <th>Operasyon Tipi Açıklaması</th>
        <th>Pasif mi ?</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.COMCODE</td>
            <td>@item.DOCTYPE</td>
            <td>@item.DOCTYPETEXT</td>
            <td>@(item.ISPASSIVE == 1 ? "Evet" : "Hayır")</td>
            <td><a href="/OperationType/KayıtSil/@item.COMCODE" class="btn btn-danger">Sil</a></td>
            <td><a href="/OperationType/KayıtGuncelle/@item.COMCODE" class="btn btn-success">Güncelle</a></td>


        </tr>

    }
</table>

<a href="/OperationType/YeniKayıt" class="btn btn-primary">Yeni Operasyon Tipi Ekle</a>
