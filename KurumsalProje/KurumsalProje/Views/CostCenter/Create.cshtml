@model IEnumerable<KurumsalProje.ViewModels.CostCenterViewModels.CostCenterViewModel>

<h2>Yeni Maliyet Merkezi Ekle</h2>
<br />
<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="COMCODE">Firma Kod</label>
                <select id="COMCODE" name="COMCODE" class="form-control" required>
                    <option value="">Seçiniz</option>
                    @foreach (var item in ViewBag.COMCODEList as List<SelectListItem>)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="CCMDOCTYPE">Maliyet Merkezi Tipi</label>
                <select id="CCMDOCTYPE" name="CCMDOCTYPE" class="form-control" required>
                    <option value="">Seçiniz</option>
                    @foreach (var item in ViewBag.DOCTYPEList as List<SelectListItem>)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="CCMDOCNUM">Maliyet Merkezi Kodu</label>
                <input type="text" id="CCMDOCNUM" name="CCMDOCNUM" class="form-control" required />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="CCMDOCFROM">Geçerlilik Başlangıç</label>
                <input type="date" id="CCMDOCFROM" name="CCMDOCFROM" class="form-control" required />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="CCMDOCUNTIL">Geçerlilik Bitiş</label>
                <input type="date" id="CCMDOCUNTIL" name="CCMDOCUNTIL" class="form-control" required />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="MAINCCMDOCTYPE">Ana Maliyet Merkezi Tipi</label>
                <input type="text" id="MAINCCMDOCTYPE" name="MAINCCMDOCTYPE" class="form-control" maxlength="4" required />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="MAINCCMDOCNUM">Ana Maliyet Merkezi Kodu</label>
                <input type="text" id="MAINCCMDOCNUM" name="MAINCCMDOCNUM" class="form-control" required />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="ISDELETED">Silindi mi?</label>
                <select id="ISDELETED" name="ISDELETED" class="form-control" required>
                    <option value="">Seçiniz</option>
                    <option value="0">Hayır</option>
                    <option value="1">Evet</option>
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="ISPASSIVE">Pasif mi?</label>
                <select id="ISPASSIVE" name="ISPASSIVE" class="form-control" required>
                    <option value="">Seçiniz</option>
                    <option value="0">Hayır</option>
                    <option value="1">Evet</option>
                </select>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="LANCODE">Dil</label>
                <select id="LANCODE" name="LANCODE" class="form-control" required>
                    <option value="">Seçiniz</option>
                    @foreach (var item in ViewBag.LANCODEList as List<SelectListItem>)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="CCMSTEXT">Kısa Açıklama</label>
                <input type="text" id="CCMSTEXT" name="CCMSTEXT" class="form-control" required />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="CCMLTEXT">Uzun Açıklama</label>
                <textarea id="CCMLTEXT" name="CCMLTEXT" class="form-control" required></textarea>
            </div>
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>