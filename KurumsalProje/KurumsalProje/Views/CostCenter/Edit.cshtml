@model KurumsalProje.ViewModels.CostCenterViewModels.CostCenterViewModel
@{
    ViewBag.Title = "Edit";
}
<h2>Maliyet Merkezi Güncelle</h2>
<br />
<form asp-action="Edit" method="post">
    <input type="hidden" id="COMCODE" name="COMCODE" value="@Model.COMCODE" />
    <input type="hidden" id="CCMDOCTYPE" name="CCMDOCTYPE" value="@Model.CCMDOCTYPE" />
    <input type="hidden" id="CCMDOCNUM" name="CCMDOCNUM" value="@Model.CCMDOCNUM" />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="CCMDOCFROM">Geçerlilik Başlangıç</label>
                <input type="date" id="CCMDOCFROM" name="CCMDOCFROM" class="form-control" value="@Model.CCMDOCFROM.ToString("yyyy-MM-dd")" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="CCMDOCUNTIL">Geçerlilik Bitiş</label>
                <input type="date" id="CCMDOCUNTIL" name="CCMDOCUNTIL" class="form-control" value="@Model.CCMDOCUNTIL.ToString("yyyy-MM-dd")" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="MAINCCMDOCTYPE">Ana Maliyet Merkezi Tipi</label>
                <input type="text" id="MAINCCMDOCTYPE" name="MAINCCMDOCTYPE" class="form-control" value="@Model.MAINCCMDOCTYPE" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="MAINCCMDOCNUM">Ana Maliyet Merkezi Kodu</label>
                <input type="text" id="MAINCCMDOCNUM" name="MAINCCMDOCNUM" class="form-control" value="@Model.MAINCCMDOCNUM" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="ISDELETED">Silindi mi?</label>
                <select id="ISDELETED" name="ISDELETED" class="form-control">
                    <option value="">Seçiniz</option>
                    <option value="0" @(Model.ISDELETED == 0 ? "selected" : "")>Hayır</option>
                    <option value="1" @(Model.ISDELETED == 1 ? "selected" : "")>Evet</option>
                </select>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="ISPASSIVE">Pasif mi?</label>
                <select id="ISPASSIVE" name="ISPASSIVE" class="form-control">
                    <option value="">Seçiniz</option>
                    <option value="0" @(Model.ISPASSIVE == 0 ? "selected" : "")>Hayır</option>
                    <option value="1" @(Model.ISPASSIVE == 1 ? "selected" : "")>Evet</option>
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="LANCODE">Dil</label>
                <select id="LANCODE" name="LANCODE" class="form-control">
                    <option value="">Seçiniz</option>
                    @foreach (var item in ViewBag.LANCODEList as List<SelectListItem>)
                    {
                        <option value="@item.Value" @(item.Value == Model.LANCODE ? "selected" : "")>@item.Text</option>
                    }
                </select>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="CCMSTEXT">Kısa Açıklama</label>
                <input type="text" id="CCMSTEXT" name="CCMSTEXT" class="form-control" value="@Model.CCMSTEXT" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="CCMLTEXT">Uzun Açıklama</label>
        <textarea id="CCMLTEXT" name="CCMLTEXT" class="form-control">@Model.CCMLTEXT</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>