@model KurumsalProje.Models.BSMGRBCEGEN002

@{
    ViewBag.Title = "Kayıt Güncelle";
}

<h2>Kayıt Güncelle</h2>

<form action="/Language/KayıtGuncelle" method="post">
    <!-- COMCODE'yi gizli bir alan olarak gönder -->
    <input type="hidden" name="COMCODE" value="@Model.COMCODE" />

    <div class="form-group">
        <label>Dil Kodu</label>
        <input type="text" name="LANCODE" value="@Model.LANCODE" class="form-control" maxlength="3" />
    </div>

    <div class="form-group">
        <label>Açıklama</label>
        <input type="text" name="LANTEXT" value="@Model.LANTEXT" class="form-control" />
    </div>



    <button type="submit" class="btn btn-success">Güncelle</button>
</form>