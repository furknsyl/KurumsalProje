@model KurumsalProje.Models.BSMGRBCEGEN003

@{
    ViewBag.Title = "Kayıt Güncelle";
}

<h2>Kayıt Güncelle</h2>

<form action="/Country/KayıtGuncelle" method="post">
    <!-- COMCODE'yi gizli bir alan olarak gönder -->
    <input type="hidden" name="COMCODE" value="@Model.COMCODE" />

    <div class="form-group">
        <label>Ülke Kod</label>
        <input type="text" name="COUNTRYCODE" value="@Model.COUNTRYCODE" class="form-control" maxlength="3" required />
    </div>

    <div class="form-group">
        <label>Adres 1</label>
        <input type="text" name="COUNTRYTEXT" value="@Model.COUNTRYTEXT" class="form-control" />
    </div>

    

    <button type="submit" class="btn btn-success">Güncelle</button>
</form>