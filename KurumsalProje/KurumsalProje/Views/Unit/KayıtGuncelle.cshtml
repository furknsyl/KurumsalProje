@model KurumsalProje.Models.BSMGRBCEGEN005

@{
    ViewBag.Title = "Kayıt Güncelle";
}

<h2>Kayıt Güncelle</h2>

<form action="/Unit/KayıtGuncelle" method="post">
    <!-- COMCODE'yi gizli bir alan olarak gönder -->
    <input type="hidden" name="COMCODE" value="@Model.COMCODE" />

    <div class="form-group">
        <label>Birim Kodu</label>
        <input type="text" name="UNITCODE" value="@Model.UNITCODE" class="form-control" maxlength="3" />
    </div>

    <div class="form-group">
        <label>Birim Adı</label>
        <input type="text" name="UNITTEXT" value="@Model.UNITTEXT" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ana Ağırlık Birimi</label>
        <!-- DropDownList ile seçim alanı -->
        <select id="ISMAINUNIT" name="ISMAINUNIT" class="form-control">
            <option value="0" @(Model.ISMAINUNIT == 0 ? "selected" : "")>Hayır</option>
            <option value="1" @(Model.ISMAINUNIT == 1 ? "selected" : "")>Evet</option>
        </select>
    </div>

    <div class="form-group">
        <label>Ana Birim Kodu</label>
        <input type="text" name="MAINUNITCODE" value="@Model.MAINUNITCODE" class="form-control" maxlength="3" />
    </div>

    <button type="submit" class="btn btn-success">Güncelle</button>
</form>
