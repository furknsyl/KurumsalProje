@model KurumsalProje.Models.BSMGRBCEGEN005

@{
    ViewBag.Title = "YeniKayıt";
}

<form method="post">
    <div class="form-group">
        <label for="COMCODE">Firma Kod</label>
        <!-- COMCODE için DropDownList -->
        <select id="COMCODE" name="COMCODE" class="form-control">
            <option value="">Seçiniz</option>
            @foreach (var item in ViewBag.COMCODEList as List<SelectListItem>)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>
    <br />

    <label>Birim Kodu</label>
    @Html.TextBoxFor(x => x.UNITCODE, new { @class = "form-control",maxlength = "3" })
    <br />

    <label>Birim Adı</label>
    @Html.TextBoxFor(x => x.UNITTEXT, new { @class = "form-control" })
    <br />

    <label>Ana Ağırlık Birimi</label>
    <!-- DropDownList kullanımı -->
    <select id="ISMAINUNIT" name="ISMAINUNIT" class="form-control">
        <option value="0">Hayır</option>
        <option value="1">Evet</option>
    </select>
    <br />

    <label>Ana Birim Kodu</label>
    @Html.TextBoxFor(x => x.MAINUNITCODE, new { @class = "form-control", maxlength = "3" })
    <br />

    <button class="btn btn-info">Kaydet</button>
</form>
