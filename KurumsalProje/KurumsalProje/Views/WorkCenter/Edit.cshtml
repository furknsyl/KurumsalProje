@model KurumsalProje.ViewModels.WorkCenterViewModels.WorkCenterViewModel

<h2>İş Merkezi Güncelle</h2>
<br />
<form asp-action="Edit" method="post">
    <!-- Gizli alanlar -->
    <input type="hidden" id="COMCODE" name="COMCODE" value="@Model.COMCODE" />
    <input type="hidden" id="WCMDOCTYPE" name="WCMDOCTYPE" value="@Model.WCMDOCTYPE" />
    <input type="hidden" id="WCMDOCNUM" name="WCMDOCNUM" value="@Model.WCMDOCNUM" />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="WCMDOCFROM">Geçerlilik Başlangıç</label>
                <input type="date" id="WCMDOCFROM" name="WCMDOCFROM" class="form-control" value="@Model.WCMDOCFROM.ToString("yyyy-MM-dd")" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="WCMDOCUNTIL">Geçerlilik Bitiş</label>
                <input type="date" id="WCMDOCUNTIL" name="WCMDOCUNTIL" class="form-control" value="@Model.WCMDOCUNTIL.ToString("yyyy-MM-dd")" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="MAINWCMDOCTYPE">Ana İş Merkezi Tipi</label>
                <input type="text" id="MAINWCMDOCTYPE" name="MAINWCMDOCTYPE" class="form-control" value="@Model.MAINWCMDOCTYPE" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="MAINWCMDOCNUM">Ana İş Merkezi Kodu</label>
                <input type="text" id="MAINWCMDOCNUM" name="MAINWCMDOCNUM" class="form-control" value="@Model.MAINWCMDOCNUM" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="WORKTIME">Çalışma Süresi</label>
                <input type="number" id="WORKTIME" name="WORKTIME" class="form-control" value="@string.Format("{0:0.###}", Model.WORKTIME)" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="ISDELETED">Silindi mi?</label>
                <select id="ISDELETED" name="ISDELETED" class="form-control">
                    <option value="0" @(Model.ISDELETED == 0 ? "selected" : "")>Hayır</option>
                    <option value="1" @(Model.ISDELETED == 1 ? "selected" : "")>Evet</option>
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="ISPASSIVE">Pasif mi?</label>
                <select id="ISPASSIVE" name="ISPASSIVE" class="form-control">
                    <option value="0" @(Model.ISPASSIVE == 0 ? "selected" : "")>Hayır</option>
                    <option value="1" @(Model.ISPASSIVE == 1 ? "selected" : "")>Evet</option>
                </select>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="LANCODE">Dil</label>
                <select id="LANCODE" name="LANCODE" class="form-control">
                    @foreach (var item in ViewBag.LANCODEList as List<SelectListItem>)
                    {
                        <option value="@item.Value" @(item.Value == Model.LANCODE ? "selected" : "")>@item.Text</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="WCMSTEXT">Kısa Açıklama</label>
                <input type="text" id="WCMSTEXT" name="WCMSTEXT" class="form-control" value="@Model.WCMSTEXT" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="OPRDOCTYPE">Operasyon Kodu</label>
                <select id="OPRDOCTYPE" name="OPRDOCTYPE" class="form-control">
                    @foreach (var item in ViewBag.OPRDOCTYPEList as List<SelectListItem>)
                    {
                        <option value="@item.Value" @(item.Value == Model.OPRDOCTYPE ? "selected" : "")>@item.Text</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="WCMLTEXT">Uzun Açıklama</label>
        <textarea id="WCMLTEXT" name="WCMLTEXT" class="form-control">@Model.WCMLTEXT</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>