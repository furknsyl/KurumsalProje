@model KurumsalProje.ViewModels.BomViewModels.BomViewModel
@{
    ViewBag.Title = "Edit";
}
<h2>Ürün Ağacı Güncelle</h2>
<br />
<form asp-action="Edit" method="post">
    <!-- Gizli alanlar -->
    <input type="hidden" id="COMCODE" name="COMCODE" value="@Model.COMCODE" />
    <input type="hidden" id="BOMDOCTYPE" name="BOMDOCTYPE" value="@Model.BOMDOCTYPE" />
    <input type="hidden" id="BOMDOCNUM" name="BOMDOCNUM" value="@Model.BOMDOCNUM" />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="BOMDOCFROM">Geçerlilik Başlangıç</label>
                <input type="date" id="BOMDOCFROM" name="BOMDOCFROM" class="form-control" value="@Model.BOMDOCFROM.ToString("yyyy-MM-dd")" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="BOMDOCUNTIL">Geçerlilik Bitiş</label>
                <input type="date" id="BOMDOCUNTIL" name="BOMDOCUNTIL" class="form-control" value="@Model.BOMDOCUNTIL.ToString("yyyy-MM-dd")" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="MATDOCTYPE">Malzeme Tipi</label>
                <select id="MATDOCTYPE" name="MATDOCTYPE" class="form-control">
                    <option value="">Seçiniz</option>
                    @foreach (var item in ViewBag.MATDOCTYPEList as List<SelectListItem>)
                    {
                        <option value="@item.Value" @(item.Value == Model.MATDOCTYPE ? "selected" : "")>@item.Text</option>
                    }
                </select>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="MATDOCNUM">Malzeme Kodu</label>
                <input type="text" id="MATDOCNUM" name="MATDOCNUM" class="form-control" value="@Model.MATDOCNUM" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="ISDELETED">Silindi mi?</label>
                <select id="ISDELETED" name="ISDELETED" class="form-control">
                    <option value="">Seçiniz</option>
                    <option value="0" @(Model.ISDELETED == 0 ? "selected" : "")>Hayır</option>
                    <option value="1" @(Model.ISDELETED == 1 ? "selected" : "")>Evet</option>
                </select>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="ISPASSIVE">Pasif mi?</label>
                <select id="ISPASSIVE" name="ISPASSIVE" class="form-control">
                    <option value="">Seçiniz</option>
                    <option value="0" @(Model.ISPASSIVE == 0 ? "selected" : "")>Hayır</option>
                    <option value="1" @(Model.ISPASSIVE == 1 ? "selected" : "")>Evet</option>
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="QUANTITY">Miktar</label>
                <input type="number" id="QUANTITY" name="QUANTITY" class="form-control" value="@string.Format("{0:0.###}", Model.QUANTITY)" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="DRAWNUM">Çizim Numarası</label>
                <input type="text" id="DRAWNUM" name="DRAWNUM" class="form-control" value="@Model.DRAWNUM" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="CONTENTNUM">İçerik Numarası</label>
                <input type="text" id="CONTENTNUM" name="CONTENTNUM" class="form-control" value="@Model.CONTENTNUM" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="COMPONENT">Bileşen Kodu</label>
                <input type="text" id="COMPONENT" name="COMPONENT" class="form-control" value="@Model.COMPONENT" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="COMPBOMDOCTYPE">Kalem Ürün Ağacı Tipi</label>
                <select id="COMPBOMDOCTYPE" name="COMPBOMDOCTYPE" class="form-control">
                    <option value="">Seçiniz</option>
                    @foreach (var item in ViewBag.COMPBOMDOCTYPEList as List<SelectListItem>)
                    {
                        <option value="@item.Value" @(item.Value == Model.COMPBOMDOCTYPE ? "selected" : "")>@item.Text</option>
                    }
                </select>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="COMPBOMDOCNUM">Kalem Ürün Ağacı Kodu</label>
                <input type="text" id="COMPBOMDOCNUM" name="COMPBOMDOCNUM" class="form-control" value="@Model.COMPBOMDOCNUM" />
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>